{
    "manifest_version": 3,
    "name": "TabSort for YouTube",
    "version": "1.0.0",
    "description": "Sort YouTube watch tabs by remaining time.",
    "permissions": [
      "tabs",
      "alarms",
      "webNavigation",
      "storage",
      "tabGroups"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "background/index.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "TabSort"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/watch*", "*://*.youtube.com/shorts*"],
        "js": ["content/index.js"],
        "run_at": "document_end"
      }
    ]
  }
